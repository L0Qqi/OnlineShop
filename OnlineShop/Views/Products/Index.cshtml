@model List<OnlineShop.Models.Product>
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Каталог товаров";
    var user = await UserManager.GetUserAsync(User);
    bool isAdmin = user?.Role == "admin";
}

<h2>@ViewData["Title"]</h2>

@if (isAdmin)
{
    <a asp-action="Create" class="btn btn-success mb-4">
        <i class="bi bi-plus-circle"></i> Добавить товар
    </a>
}

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-4">
            <div class="card mb-3">
                <img src="@product.ImageUrl" class="card-img-top img-fluid" style="height: 400px; object-fit: cover;" alt="@product.Name">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">@product.Description</p>
                    <p><strong>@product.Price руб.</strong></p>

                    <form asp-controller="Cart" asp-action="Add" method="get" class="mt-auto">
                        <input type="hidden" name="id" value="@product.Id" />
                        <button type="submit" class="btn btn-outline-primary w-100 mb-2">
                            <i class="bi bi-cart-plus"></i> Добавить в корзину
                        </button>
                    </form>

                    @if (isAdmin)
                    {
                        <div class="d-flex justify-content-between">
                            <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-sm btn-primary w-45">
                                <i class="bi bi-pencil"></i> Редактировать
                            </a>
                            <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-sm btn-danger w-45">
                                <i class="bi bi-trash"></i> Удалить
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>
